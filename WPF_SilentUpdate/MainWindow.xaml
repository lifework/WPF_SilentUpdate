<Window x:Class="WPF_SilentUpdate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SilentUpdate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Process Id: "/>
        <TextBox Text="{Binding ProcessId, Mode=OneWay}" Height="20" Margin="0,0,0,10"/>

        <TextBlock Text="Version: " />
        <TextBox Text="{Binding AssemblyVersion, Mode=OneWay}" Height="20" Margin="0,0,0,10"/>

        <TextBlock Text="Location: " />
        <TextBox Text="{Binding AssemblyLocation, Mode=OneWay}" Height="100" TextWrapping="Wrap" Margin="0,0,0,10"/>

        <Button Width="200" Height="50" Click="OnRestartButtonClicked" Content="再起動する" />
    </StackPanel>
</Window>
